{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**/*.{js,mjs,cjs,ts,mts,cts,jsx,tsx}"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useConst": "warn",
        "useSelfClosingElements": "warn"
      },
      "suspicious": {
        "noUnknownAtRules": "off",
        "noExplicitAny": "warn",
        "noConsole": "warn"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "noUnreachable": "error"
      },
      "complexity": {
        "noUselessConstructor": "warn",
        "useLiteralKeys": "warn"
      },
      "nursery": {
        "useSortedClasses": "warn"
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "quoteStyle": "double",
      "trailingCommas": "es5"
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  },
  "overrides": [
    {
      "includes": ["*.css", "*.json"],
      "linter": {
        "enabled": false
      }
    }
  ]
}
